<section class="container mx-auto max-w-lg mt-10 mb-10 px-8">

  <!-- Heading -->
  <h2 class="text-2xl font-bold mb-6">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>

    <!-- Email -->
    <div class="mb-4 mt-4">
      <%= f.label :email, class: "block mb-1 font-medium" %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Password -->
    <div class="mb-4 mt-4">
      <%= f.label :password, class: "block mb-1 font-medium" %>
      <%= f.password_field :password,
                           autocomplete: "current-password",
                           class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Remember Me -->
    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me, class: "accent-blue-600" %>
        <%= f.label :remember_me, class: "font-medium" %>
      </div>
    <% end %>

    <!-- Submit -->
    <div class="mb-4 mt-4">
      <%= f.submit "Log in",
                   class: "px-4 py-2 border border-black hover:bg-gray-200 cursor-pointer" %>
    </div>

  <% end %>

  <!-- Devise Links -->
  <%= render "devise/shared/links" %>

</section>
