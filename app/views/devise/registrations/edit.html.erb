<section class="container mx-auto max-w-lg mt-10 mb-10 px-8">

  <!-- Heading -->
  <h2 class="text-2xl font-bold mb-6">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Username -->
    <div class="mb-4 mt-4">
      <%= f.label :username, class: "block mb-1 font-medium" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Email -->
    <div class="mb-4">
      <%= f.label :email, class: "block mb-1 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Avatar -->
    <div class="mb-4">
      <%= f.label :avatar, "Profile Picture", class: "block mb-1 font-medium" %>
      <%= f.file_field :avatar,
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400 cursor-pointer" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="p-4 bg-yellow-50 border border-yellow-300 text-yellow-800 rounded">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- Password -->
    <div class="mb-4">
      <%= f.label :password, class: "block mb-1 font-medium" %>
      <span class="text-sm text-gray-600">(leave blank if you don't want to change it)</span>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>

      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600 block mt-1"><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <!-- Confirm Password -->
    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block mb-1 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Current Password -->
    <div class="mb-4">
      <%= f.label :current_password, class: "block mb-1 font-medium" %>
      <span class="text-sm text-gray-600">(we need your current password to confirm your changes)</span>
      <%= f.password_field :current_password, autocomplete: "current-password",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Submit button -->
    <div>
      <%= f.submit "Update", class: "px-4 py-2 border border-black hover:bg-gray-200 cursor-pointer" %>
    </div>

  <% end %>

  <!-- Cancel account -->
  <h3 class="text-xl font-semibold mt-8 mb-2">Cancel my account</h3>
  <div class="mb-6">
    <%= button_to "Cancel my account",
        registration_path(resource_name),
        data: { confirm: "Are you sure?" },
        method: :delete,
        class: "px-4 py-2 border border-red-600 text-red-600 hover:bg-red-100 cursor-pointer" %>
  </div>

  <!-- Back link -->
  <div class="mt-4">
  <%= link_to "Back", :back, class: "text-blue-600 hover:underline" %>
  </div>
</section>
