<section class="container mx-auto max-w-lg mt-10 mb-10 px-8">

  <!-- Heading -->
  <h2 class="text-2xl font-bold mb-6">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Username -->
    <div class="mb-4 mt-4">
      <%= f.label :username, class: "block mb-1 font-medium" %>
      <%= f.text_field :username, autofocus: true, autocomplete: "username",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Email -->
    <div class="mb-4 mt-4">
      <%= f.label :email, class: "block mb-1 font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Password -->
    <div class="mb-4 mt-4">
      <%= f.label :password, class: "block mb-1 font-medium" %>
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Password Confirmation -->
    <div class="mb-4 mt-4">
      <%= f.label :password_confirmation, class: "block mb-1 font-medium" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Submit button -->
    <div class="mb-4 mt-4">
      <%= f.submit "Sign up",
          class: "px-4 py-2 border border-black hover:bg-gray-200 cursor-pointer" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</section>
