<section class="container mx-auto max-w-lg mt-10 mb-10 px-8">

  <!-- Heading -->
  <h2 class="text-2xl font-bold mb-6">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-6" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Email field -->
    <div class="mb-4 mt-4">
      <%= f.label :email, class: "block mb-1 font-medium" %>
      <%= f.email_field :email,
                        autofocus: true,
                        autocomplete: "email",
                        class: "w-full border border-black p-2 focus:outline-none focus:ring-2 focus:ring-blue-400" %>
    </div>

    <!-- Submit button -->
    <div class="mb-4 mt-4">
      <%= f.submit "Send me reset password instructions",
                   class: "px-4 py-2 border border-black hover:bg-gray-200 cursor-pointer" %>
    </div>

  <% end %>

  <%= render "devise/shared/links" %>

</section>
