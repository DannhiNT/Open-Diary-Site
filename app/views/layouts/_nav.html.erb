  <!-- Right side -->
  <div class="flex items-center gap-x-4">
    <% if user_signed_in? %>
      <%= link_to user_path(current_user.id) do %>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 rounded hover:bg-gray-200 cursor-pointer">
        <path fill-rule="evenodd" d="M7.5 6a4.5 4.5 0 1 1 9 0 4.5 4.5 0 0 1-9 0ZM3.751 20.105a8.25 8.25 0 0 1 16.498 0 .75.75 0 0 1-.437.695A18.683 18.683 0 0 1 12 22.5c-2.786 0-5.433-.608-7.812-1.7a.75.75 0 0 1-.437-.695Z" clip-rule="evenodd" />
      </svg>
      <% end %>

      <%= button_to new_post_path, method: :get, class: "px-3 py-1" do %> <!-- Add Post Button-->
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 cursor-pointer bg-white text-blue-600 hover:bg-blue-100 rounded">
          <path fill-rule="evenodd" d="M12 3.75a.75.75 0 0 1 .75.75v6.75h6.75a.75.75 0 0 1 0 1.5h-6.75v6.75a.75.75 0 0 1-1.5 0v-6.75H4.5a.75.75 0 0 1 0-1.5h6.75V4.5a.75.75 0 0 1 .75-.75Z" clip-rule="evenodd" />
        </svg>
      <% end %>
      <%= button_to "Logout", destroy_user_session_path, method: :delete, data: { confirm: "Are you sure?" }, class: "px-3 py-1 rounded cursor-pointer hover:bg-gray-100" %>
    <% else %>
      <%= button_to "Sign Up", new_user_registration_path, method: :get, class: "bg-white text-blue-600 px-3 py-1 rounded hover:bg-blue-100 cursor-pointer" %>
      <%= button_to "Sign In", new_user_session_path, method: :get, class: "bg-white text-blue-600 px-3 py-1 rounded hover:bg-blue-100 cursor-pointer" %>
    <% end %>
  </div>
</nav>