<nav class="flex items-center justify-between px-6 py-4 border-b border-black-200">
  
  <div class="text-xl font-bold">
    <%= link_to root_path do %> <!-- Home Button-->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="size-6 rounded hover:bg-gray-200 cursor-pointer ">
        <path d="M11.47 3.841a.75.75 0 0 1 1.06 0l8.69 8.69a.75.75 0 1 0 1.06-1.061l-8.689-8.69a2.25 2.25 0 0 0-3.182 0l-8.69 8.69a.75.75 0 1 0 1.061 1.06l8.69-8.689Z" />
